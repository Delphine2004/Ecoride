{
  "name": "fumex/ecoride",
  "description": "Projet ECF de covoiturage utilisant PHP sans framework",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "vlucas/phpdotenv": "^5.5",
    "phpmailer/phpmailer": "^6.10",
    "firebase/php-jwt": "^6.11",
    "mongodb/mongodb": "^2.1",
    "nikic/fast-route": "^1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "soyuka/stubs-mongodb": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  }
}
