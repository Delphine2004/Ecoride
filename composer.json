  "type": "project",
  "require": {
    "php": ">=8.1",
    "nikic/fast-route": "^1.3",
    "vlucas/phpdotenv": "^5.5",
    "phpmailer/phpmailer": "^6.10",
    "firebase/php-jwt": "^6.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoLoad": {
    "psr-4": {
